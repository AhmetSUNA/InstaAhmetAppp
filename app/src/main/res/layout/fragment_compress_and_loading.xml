<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Profile.YukleniyorFragment">


    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:indeterminate="true"/>
    <TextView
            android:text="Sıkıştırılıyor ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBilgi" app:layout_constraintStart_toEndOf="@+id/progressBar2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/progressBar2"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar2"/>
</android.support.constraint.ConstraintLayout>