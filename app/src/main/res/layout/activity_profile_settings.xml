<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile.ProfileSettingsActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/profileSettingsRoot">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back"
                android:id="@+id/imgBack" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Ayarlar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" app:layout_constraintStart_toEndOf="@+id/imgBack"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/imgBack"
                app:layout_constraintBottom_toBottomOf="@+id/imgBack" android:textColor="@color/siyah"
                android:textSize="16sp"/>

        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@color/golgelik"
              android:id="@+id/golgelik" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent">
        </View>
        <TextView
                android:text="Hesap Ayarlari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/golgelik"
                android:textStyle="bold" android:textColor="@color/siyah" android:layout_marginTop="16dp"/>
        <TextView
                android:text="Profili Düzenle"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:id="@+id/tvProfilDüzenleHesapAyarlari" app:layout_constraintStart_toStartOf="@+id/textView10"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Beğendiğin Gönderiler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvBegendiginGonderilerHesapAyarlari"
                app:layout_constraintStart_toStartOf="@+id/tvProfilDüzenleHesapAyarlari"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvProfilDüzenleHesapAyarlari"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Şifreni Değiştir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvSifreniDegistirHesapAyarlari"
                app:layout_constraintStart_toStartOf="@+id/tvBegendiginGonderilerHesapAyarlari"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvBegendiginGonderilerHesapAyarlari"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Kaydedilenler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvKaydedilenlerHesapAyarlari"
                app:layout_constraintStart_toStartOf="@+id/tvSifreniDegistirHesapAyarlari"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSifreniDegistirHesapAyarlari"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Gizli Hesap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvGizliHesapHesapAyarlari"
                app:layout_constraintStart_toStartOf="@+id/tvKaydedilenlerHesapAyarlari"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvKaydedilenlerHesapAyarlari"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Çıkış"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvCikisHesapAyarlari"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textColor="@color/mavi"
                app:layout_constraintStart_toStartOf="@+id/tvAramaGecmisiniSilHesapAyarlari"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAramaGecmisiniSilHesapAyarlari"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Arama Geçmişini Sil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAramaGecmisiniSilHesapAyarlari"
                app:layout_constraintStart_toStartOf="@+id/tvGizliHesapHesapAyarlari"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGizliHesapHesapAyarlari"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textColor="@color/mavi"/>

        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/golgelik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView" android:id="@+id/view"
                app:layout_constraintHorizontal_bias="0.0">

        </View>

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:menu="@menu/bottom_navigation_menu"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/bottomNavigationView">
        </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profileSettingsContainer"
            android:visibility="visible">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>